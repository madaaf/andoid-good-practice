<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="testaugmentedrealitysdk.android.octo.com.testxml.MainActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00FF00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#FF0000"
            android:text="A" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FF0000"
            android:text="B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#FF0000"
            android:text="C" />




    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/rl"
        android:layout_alignRight="@id/rl"
        android:layout_alignTop="@id/rl"
        android:background="#FF0000"
        android:text="C" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl"
        android:layout_toEndOf="@id/rl"
        android:layout_toRightOf="@id/rl"
        android:background="#0000FF"
        android:text="D" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl"
        android:layout_toLeftOf="@id/rl"
        android:background="#0000FF"
        android:text="E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl"
        android:layout_toLeftOf="@id/rl"
        android:background="#0000FF"
        android:text="F" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl"
        android:layout_alignLeft="@+id/rl"
        android:layout_alignStart="@+id/rl"
        android:background="#0000FF"
        android:text="G" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl"
        android:layout_alignEnd="@id/rl"
        android:layout_alignRight="@id/rl"
        android:background="#0000FF"
        android:text="G" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rl"
        android:layout_toRightOf="@id/rl"
        android:background="#0000FF"
        android:text="G" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl"
        android:layout_below="@id/rl"
        android:background="#0000FF"
        android:text="G" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/rl"
        android:layout_below="@id/rl"
        android:background="#0000FF"
        android:text="G" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:layout_alignParentBottom="true"
        android:background="#FF00FF"
        android:text="G" />

</RelativeLayout>
